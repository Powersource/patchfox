{
  "description": "Patchfox is a scuttlebutt client",
  "manifest_version": 2,
  "name": "patchfox",
  "version": "1.0",
  "icons": {
    "96": "assets/icons/icon.png"
  },
  "applications": {
    "gecko": {
      "id": "patchfox@andregarzia.com",
      "strict_min_version": "50.0"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",

  "browser_action": {
    "browser_style": true,
    "default_icon": "assets/icons/icon.png",
    "theme_icons": [
      {
        "light": "assets/icons/icon.png",
        "dark": "assets/icons/icon.png",
        "size": 32
      }
    ],
    "default_title": "Patchfox",
    "default_popup": "build/browser_action/browser_action.html"
  },


  "permissions": [
    "notifications",
    "nativeMessaging",
    "tabs",
    "activeTab",
    "storage"
  ]
}
