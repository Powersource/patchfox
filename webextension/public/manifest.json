{
  "description": "Patchfox is a scuttlebutt client",
  "manifest_version": 2,
  "name": "patchfox",
  "version": "2.0",
  "icons": {
    "96": "build/icon.png"
  },
  "applications": {
    "gecko": {
      "id": "patchfox@andregarzia.com",
      "strict_min_version": "50.0"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "background": {
    "scripts": [
      "build/background.js"
    ]
  },

  "protocol_handlers": [
    {
      "protocol": "ssb",
      "name": "Secure Scuttlebutt Protocol",
      "uriTemplate": "build/index.html#/url/%s"
    }
  ],

  "permissions": [
    "notifications",
    "nativeMessaging",
    "tabs",
    "activeTab",
    "storage"
  ]
}